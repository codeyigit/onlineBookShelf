<Window x:Class="OnlineBookShelf.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading..." Height="120" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Please wait while files are being downloaded..." Margin="0,0,0,10"/>
        <ProgressBar x:Name="progressBar" Grid.Row="1" Height="20" Minimum="0" Maximum="100"/>
    </Grid>
</Window>